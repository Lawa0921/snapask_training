<h2><%= t("users.sign_up") %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, t("users.email") %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, t("users.password") %>
    <% if @minimum_password_length %>
    <em>(<%= t("users.longer")%>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, t("users.password_confirmation") %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name, t("users.name") %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :role, t("users.role") %><br />
    <%= f.select :role, enum_collection("user", "role")%>
  </div>

  <div class="actions">
    <%= f.submit t("users.sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
